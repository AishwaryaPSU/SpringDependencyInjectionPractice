<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Disadvantage of using inner bean : repetitive code and too many objects being created -->
    <bean id="student" class="io.itsagm.JuniorStudent">
        <property name="id" value="1"></property>
        <property name="mathCheat">
            <bean class="io.itsagm.MathCheat"></bean>
        </property>
    </bean>

    <bean id="seniorstudent" class="io.itsagm.SeniorStudent">
        <property name="id" value="1"></property>
        <property name="cheat">
            <bean class="io.itsagm.MathCheat"></bean>
        </property>
    </bean>
</beans>